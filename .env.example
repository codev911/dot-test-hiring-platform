NODE_ENV='development' # 'development', 'test' or 'production', default is 'development'
PORT=3000 # Port number for the server 0 - 65535, default is 3000
MYSQL_HOST='localhost' # Database host
MYSQL_PORT=3306 # Database port
MYSQL_USER='root' # Database user
MYSQL_PASSWORD='password' # Database password
MYSQL_DATABASE='my_database' # Database name
MYSQL_LOGGING=false # Enable or disable query logging, default is false
JWT_SECRET='your_jwt_secret' # Secret key for JWT
JWT_EXPIRES_IN='1h' # e.g., '1h', '7d'
MINIO_ENDPOINT='http://localhost:9000' # MinIO server endpoint
MINIO_ACCESS_KEY='your_access_key' # MinIO access key
MINIO_SECRET_KEY='your_secret_key' # MinIO secret key
MINIO_BUCKET='your_bucket_name' # MinIO bucket name
REDIS_HOST='localhost' # Redis host
REDIS_PORT=6379 # Redis port
REDIS_PASSWORD= # Optional: set only if Redis requires auth
REDIS_DB=0 # Database index (0 by default)
CACHE_TTL_MS=60000 # Default cache TTL (in ms); controllers/services may override
